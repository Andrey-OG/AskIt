<%= form_with model: @question do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label 'Заголовок' %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Заголовок', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label 'Вопрос' %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Задать вопрос!", class: 'btn btn-primary' %>
<% end %>